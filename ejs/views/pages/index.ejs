<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head')  %>
</head>
<body>
    <header>
    <%- include('../partials/header')  %>
    </header>
    <main>
        <h2>Productos</h2>
        <table class="table table-dark">
            <thead>
                <tr>
                   <th>ID</th>
                    <th>Título</th>
                    <th>Precio</th>
                    <th>Imágen</th> 
                </tr>
            </thead>
            <tbody>
                <% for(product of products) { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.title %></td>
                        <td><%= product.price %></td>
                        <td><%= product.thumbnail %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </main>

    <footer>
        <%- include('../partials/footer')  %>
    </footer>
</body>
</html>